<article class="product-card">
  <div class="product-image">
    <img src="<%= item.image_url %>" alt="<%= item.model %> scale model">
    <%- include('../partials/stock-span.ejs', { item }) %>
  </div>
  <div class="product-content">
    <div class="product-category"><%= itemNameSingular %></div>
    <div class="product-btns">
      <h2 class="product-name"><%= item.model %></h2>
      <button class="btn btn-secondary">
        <a href="/<%= path %>/<%= item._id.toString() %>/update" style="text-decoration: none; color: inherit">Edit</a>
      </button>
    </div>
    <p class="product-model">Model #<%= item.model_id %></p>
    <p class="product-description"><%= item.description %></p>
    
    <%- include('../partials/meta-items.ejs', { item }) %>

    <div class="product-footer">
      <span class="product-price">$<%= item.price %></span>
      <span class="product-stock"><%= item.stock_quantity %> available</span>
    </div>
    
    <button class="btn btn-primary" style="width: 100%; margin-top: 1rem;">
      <a href="<%= path %>/<%= item._id.toString() %>" style="text-decoration: none; color: inherit;">View Details</a>
    </button>
  </div>
</article>